<div class="d-flex justify-content-center align-items-center min-vh-100">
  <div class="container bg-light" style="height: 60vh; width: 60vw;">
    <div class="row w-100 h-100 align-items-center justify-content-center">
      <!-- Left-Login -->
      <div class="my-3 col-md-6 d-flex flex-column justify-content-center align-items-center">
        <h2 class="my-3">ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field my-3">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
          </div>

          <div class="field my-3">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "w-100" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field my-3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="my-3 text-center">
            <%= f.submit "ログイン", class: "btn btn-dark w-100" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>

      <!-- Right-Sign-up -->
      <div class="col-md-6 d-flex flex-column justify-content-center align-items-center">
        <%= link_to "新規会員登録", new_user_registration_path, class: "btn btn-dark w-50" %>
      </div>
    </div>
  </div>
</div>
